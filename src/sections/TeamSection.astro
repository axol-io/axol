---
const title = "Meet the Team!";
const description =
  "Weâ€™re an experienced team of builders with over 5 years of experience running institutional grade infrastructure for Fortune 100 companies.\
  \
  Through sustainable staking, self healing nodes and exotic server locations we're leading the industry to build more diversified and green node infrastructure.";
const team = [
  {
    name: "Drew",
    title: "Node Ops & Protocol Director",
    image: "/teamdrew@2x.png",
  },
  {
    name: "Clay",
    title: "Business Operations & Marketing",
    image: "/teamclay@2x.png",
  },
  {
    name: "Anon Axolotl",
    title: "Node Ops Director",
    image: "/teamghost@2x.png",
  },
];
---

<section
  id="teamSection"
  class="self-stretch bg-decentralized-coral overflow-hidden shrink-0 flex flex-col items-start justify-start pt-0 px-0 pb-0 box-border gap-[0px] max-w-full text-center text-45xl text-shadow-blockchain font-body-s mq750:pt-[42px] mq750:pb-[31px] mq750:pl-[15.5px] mq750:pr-[15.5px] mq750:box-border mq450:pl-5 mq450:pr-5 mq450:box-border"
>
  <div
    id="teamSection"
    class="self-stretch flex-row items-center justify-center py-0 px-5 box-border max-w-full shrink-0 pt-4"
  >
    <h1
      class="m-0 relative text-shadow-blockchain leading-[145%] font-bold font-body-s inline-block shrink-0 max-w-full z-[1] mq750:text-32xl mq750:leading-[51px] mq450:text-19xl mq450:leading-[38px]"
    >
      {title}
    </h1>
  </div>
  <div
    class="self-stretch flex flex-col items-start justify-end py-[0px] px-36 box-border relative min-h-[933px] max-w-full shrink-0 text-left text-xl mq750:py-[77px] mq750:px-[72px] mq750:box-border mq450:pl-5 mq450:pr-5 mq450:box-border"
  >
    <div
      class="self-stretch flex flex-row items-start justify-center gap-[0px] max-w-full z-[1] mq750:gap-[0px] mq1100:flex-wrap mq1100:gap-[0px]"
    >
      <div
        class="w-[404px] rounded-md bg-axol-coral box-border flex flex-col items-center justify-center py-12 pr-5 pl-12 min-w-[325px] max-w-full border-b-[6px] border-solid border-cryptowave-sky mq750:pl-6 mq750:box-border mq450:pt-[31px] mq450:pb-[31px] mq450:box-border mb-10"
      >
        <div
          class="w-[404px] relative leading-[145%] font-medium inline-block max-w-full mq450:text-base mq450:leading-[23px]"
        >
          <p class="m-0">
            {description}
          </p>
        </div>
      </div>
      <div
        class="w-[428px] mx-auto flex flex-col items-center justify-center gap-[32px] min-w-[428px] max-w-full text-9xl"
      >
        {
          team.map((member) => (
            <div class="flex flex-row items-center justify-start gap-[8px] min-w-[428px]">
              <img
                class="h-[100px] w-[100px] relative object-cover min-h-[100px]"
                loading="lazy"
                alt=""
                src={member.image}
              />

              <div class="flex-1 rounded-full bg-axol-coral box-border flex flex-row items-center justify-start py-6 px-8 min-w-[208px] border-b-[6px] border-solid border-cryptowave-sky">
                <div class="flex flex-col items-start justify-start">
                  <h2 class="m-0 relative text-inherit leading-[100%] font-bold font-inherit inline-block min-w-[75px] mq450:text-3xl mq450:leading-[22px]">
                    {member.name}
                  </h2>
                  <div class="relative text-base leading-[145%] font-medium">
                    {member.title}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div
      class="w-full h-full absolute !m-[0] top-[0px] right-[0px] bottom-[0px] left-[0px]"
    >
      <img
        class="absolute bottom-0 left-0 right-0 w-full h-auto mix-blend-screen"
        alt=""
        src="/teamsectiontechgrid.svg"
      />

      <img
        class="absolute top-[0px] left-[263px] w-[742px] h-[418px] object-cover z-[0]"
        loading="lazy"
        alt=""
        src="/ateamof3menbuildingarocketwithadesertf-1@2x.png"
      />
    </div>
  </div>
</section>
